<!DOCTYPE html>
<html>
  <head>
    <title>RUBIT</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= favicon_link_tag image_path('favicon-16x16.png'), rel: 'icon', type: 'image/png', sizes: '16x16' %>
    <%= favicon_link_tag image_path('favicon-32x32.png'), rel: 'icon', type: 'image/png', sizes: '32x32' %>
    <%= favicon_link_tag image_path('apple-touch-icon-57x57.png'), rel: 'apple-touch-icon', sizes: '57x57' %>
    <%= favicon_link_tag image_path('apple-touch-icon-60x60.png'), rel: 'apple-touch-icon', sizes: '60x60' %>
    <%= favicon_link_tag image_path('apple-touch-icon-72x72.png'), rel: 'apple-touch-icon', sizes: '72x72' %>
    <%= favicon_link_tag image_path('apple-touch-icon-76x76.png'), rel: 'apple-touch-icon', sizes: '76x76' %>
    <%= favicon_link_tag image_path('apple-touch-icon-114x114.png'), rel: 'apple-touch-icon', sizes: '114x114' %>
    <%= favicon_link_tag image_path('apple-touch-icon-144x144.png'), rel: 'apple-touch-icon', sizes: '144x144' %>
    <%= favicon_link_tag image_path('apple-touch-icon-152x152.png'), rel: 'apple-touch-icon', sizes: '152x152' %>
    <%= favicon_link_tag image_path('apple-touch-icon-180x180.png'), rel: 'apple-touch-icon', sizes: '180x180' %>
    <%= favicon_link_tag image_path('safari-pinned-tab.svg'), rel: 'mask-icon', color: '#cc3333' %>
    <%= favicon_link_tag image_path('android-chrome-36x36.png'), rel: 'icon', type: 'image/png', sizes: '36x36' %>
    <%= favicon_link_tag image_path('android-chrome-48x48.png'), rel: 'icon', type: 'image/png', sizes: '48x48' %>
    <%= favicon_link_tag image_path('android-chrome-72x72.png'), rel: 'icon', type: 'image/png', sizes: '72x72' %>
    <%= favicon_link_tag image_path('android-chrome-96x96.png'), rel: 'icon', type: 'image/png', sizes: '96x96' %>
    <%= favicon_link_tag image_path('android-chrome-144x144.png'), rel: 'icon', type: 'image/png', sizes: '144x144' %>
    <%= favicon_link_tag image_path('android-chrome-192x192.png'), rel: 'icon', type: 'image/png', sizes: '192x192' %>
    <%= favicon_link_tag image_path('android-chrome-256x256.png'), rel: 'icon', type: 'image/png', sizes: '256x256' %>
    <%= favicon_link_tag image_path('android-chrome-384x384.png'), rel: 'icon', type: 'image/png', sizes: '384x384' %>
    <%= favicon_link_tag image_path('android-chrome-512x512.png'), rel: 'icon', type: 'image/png', sizes: '512x512' %>

    <link rel="manifest" href="<%= manifest_path format: :json %>">
    <meta name="apple-mobile-web-app-title" content="RUBIT">
    <meta name="application-name" content="RUBIT">
    <meta name="msapplication-TileColor" content="#cc3333">
    <meta name="msapplication-TileImage" content="<%= image_path 'mstile-144x144.png' %>">
    <meta name="theme-color" content="#cc3333">
  </head>
  <body class="<%= controller.controller_name %>">
    <%= render 'shared/navbar' %>
    <% unless notice.blank? %>
      <div class="alert alert-info alert-dismissable alert-fixed">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
    <% end %>
    <% unless alert.blank? %>
      <div class="alert alert-danger alert-dismissable alert-fixed">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      </div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
